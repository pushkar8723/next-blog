{
    "name": "next-blog",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build:prepare": "rm -rf .next && (test -d app/api && mv app/api .api.backup || true)",
        "build:next": "next build && yarn optimize:images",
        "build:restore": "test -d .api.backup && mv .api.backup app/api || true",
        "build": "yarn build:prepare && yarn build:next && yarn build:restore",
        "analyze": "yarn build:prepare &&ANALYZE=true next build --webpack && yarn build:restore",
        "clean": "rm -rf .next out public/optimized-images/**/nextImageExportOptimizer",
        "dev": "next dev",
        "optimize:images": "next-image-export-optimizer",
        "lint": "eslint .",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,css,scss,html}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,mdx,css,scss,html}\"",
        "start": "next start",
        "prepare": "husky",
        "generate:blog": "tsx scripts/generate-blog.ts",
        "generate:project": "tsx scripts/generate-project.ts",
        "generate:page": "tsx scripts/generate-page.ts"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^7.1.0",
        "@fortawesome/free-brands-svg-icons": "^7.1.0",
        "@fortawesome/free-solid-svg-icons": "^7.1.0",
        "@fortawesome/react-fontawesome": "^3.1.1",
        "@next/bundle-analyzer": "^16.1.3",
        "@radix-ui/react-popover": "1.1.4",
        "@radix-ui/react-slot": "1.1.1",
        "@vercel/analytics": "1.3.1",
        "@vercel/speed-insights": "^1.3.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "gray-matter": "4.0.3",
        "lucide-react": "^0.454.0",
        "marked": "17.0.1",
        "next": "16.0.10",
        "next-image-export-optimizer": "^1.20.1",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "reading-time": "1.5.0",
        "rss": "1.2.2",
        "shiki": "^1.24.0",
        "tailwind-merge": "^3.3.1",
        "zod": "3.25.76"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.24.0",
        "@next/eslint-plugin-next": "^16.1.3",
        "@stylistic/eslint-plugin-ts": "^2.9.4",
        "@tailwindcss/postcss": "^4.1.9",
        "@types/node": "^22",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@types/rss": "0.0.32",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "eslint": "^9.24.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "postcss": "^8.5",
        "prettier": "^3.5.3",
        "tailwindcss": "^4.1.9",
        "tsx": "^4.19.0",
        "tw-animate-css": "1.3.3",
        "typescript": "^5"
    },
    "packageManager": "yarn@4.12.0",
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,mdx,css,scss,html}": [
            "prettier --write"
        ]
    }
}
